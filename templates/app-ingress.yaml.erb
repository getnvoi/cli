apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: <%= name %>
  namespace: default
  annotations:
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
spec:
  ingressClassName: nginx
  rules:
  - host: <%= domain %>
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: <%= name %>
            port:
              number: <%= port %>
