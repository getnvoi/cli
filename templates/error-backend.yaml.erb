apiVersion: v1
kind: ConfigMap
metadata:
  name: nvoi-error-pages
  namespace: ingress-nginx
data:
  error.html: |
    <!DOCTYPE html>
    <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>We'll be right back</title>
      <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
          font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
          background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
          color: #fff;
          min-height: 100vh;
          display: flex;
          align-items: center;
          justify-content: center;
        }
        .container {
          text-align: center;
          padding: 2rem;
        }
        .icon {
          font-size: 4rem;
          margin-bottom: 1.5rem;
        }
        h1 {
          font-size: 2rem;
          font-weight: 600;
          margin-bottom: 0.5rem;
        }
        p {
          color: #a0aec0;
          font-size: 1.1rem;
        }
      </style>
    </head>
    <body>
      <div class="container">
        <div class="icon">&#9881;</div>
        <h1>We'll be right back</h1>
        <p>We're performing some maintenance. Please try again shortly.</p>
      </div>
    </body>
    </html>
  nginx.conf: |
    server {
      listen 8080;
      server_name _;

      location / {
        add_header X-Nvoi-Error "true" always;
        add_header Content-Type "text/html; charset=utf-8" always;
        root /usr/share/nginx/html;
        try_files /error.html =404;
      }

      location /healthz {
        return 200 "ok";
        add_header Content-Type "text/plain" always;
      }
    }
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nvoi-error-backend
  namespace: ingress-nginx
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nvoi-error-backend
  template:
    metadata:
      labels:
        app: nvoi-error-backend
    spec:
      containers:
      - name: nginx
        image: nginx:alpine
        ports:
        - containerPort: 8080
        volumeMounts:
        - name: error-pages
          mountPath: /usr/share/nginx/html/error.html
          subPath: error.html
        - name: nginx-conf
          mountPath: /etc/nginx/conf.d/default.conf
          subPath: nginx.conf
        livenessProbe:
          httpGet:
            path: /healthz
            port: 8080
          initialDelaySeconds: 5
          periodSeconds: 10
        readinessProbe:
          httpGet:
            path: /healthz
            port: 8080
          initialDelaySeconds: 2
          periodSeconds: 5
        resources:
          requests:
            memory: "16Mi"
            cpu: "10m"
          limits:
            memory: "32Mi"
            cpu: "50m"
      volumes:
      - name: error-pages
        configMap:
          name: nvoi-error-pages
      - name: nginx-conf
        configMap:
          name: nvoi-error-pages
---
apiVersion: v1
kind: Service
metadata:
  name: nvoi-error-backend
  namespace: ingress-nginx
spec:
  selector:
    app: nvoi-error-backend
  ports:
  - port: 80
    targetPort: 8080
